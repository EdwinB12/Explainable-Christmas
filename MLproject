name: explainable salt

entry_points:
    train:
        command: "python pipeline/read_and_split_data.py && \
            python pipeline/process_data.py && \
            python pipeline/train.py"

    run_all:
        command: "python pipeline/read_and_split_data.py && \
            python pipeline/process_data.py && \
            python pipeline/train.py && \
            python pipeline/explain.py"

    data_prep:
        command: "python pipeline/read_and_split_data.py && \
            python pipeline/process_data.py"